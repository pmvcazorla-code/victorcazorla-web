---
import "../styles/global.css";

const { title = "Víctor Cazorla Fernández" } = Astro.props;
const currentPath = Astro.url.pathname;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="utf-8" />
    <title>{title}</title>
  </head>

  <body>
    <header class="site-header">
      <div class="header-inner">
        <div class="identity">
          <h1 class="site-title">Víctor Cazorla Fernández</h1>
          <p class="site-subtitle">
            Tecnología · Ciencia · Docencia · Ética profesional
          </p>
        </div>

        <nav class="main-nav">
          <a href="/" class={currentPath === "/" ? "active" : ""}>Sobre mí</a>
          <a href="/it" class={currentPath.startsWith("/it") ? "active" : ""}>Dirección y Gobernanza de IT</a>
          <a href="/cienciasambientales" class={currentPath.startsWith("/cienciasambientales") ? "active" : ""}>Gestión Ambiental</a>
          <a href="/deontologia" class={currentPath.startsWith("/deontologia") ? "active" : ""}>Deontología</a>
        </nav>
      </div>
    </header>

    <main>
      <slot />
    </main>
  </body>
</html>
