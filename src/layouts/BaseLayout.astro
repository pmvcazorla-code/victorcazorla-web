    <style>
      :root {
        --bg-main: #070b14;
        --bg-header: rgba(7, 11, 20, 0.88);
        --text-main: #e6e9ef;
        --text-muted: #b6bcc8;
        --accent: #8fb3ff;
        --accent-soft: rgba(143, 179, 255, 0.15);
        --border-soft: rgba(255, 255, 255, 0.08);
      }

      * {
        box-sizing: border-box;
      }

      body {
        margin: 0;
        font-family: "Inter", system-ui, sans-serif;
        background: radial-gradient(
            1200px 600px at 50% -200px,
            #121a2f 0%,
            transparent 70%
          ),
          var(--bg-main);
        color: var(--text-main);
        line-height: 1.75;
      }

      header {
        position: sticky;
        top: 0;
        z-index: 100;
        background: var(--bg-header);
        backdrop-filter: blur(12px);
        border-bottom: 1px solid var(--border-soft);
      }

      .header-inner {
        max-width: 1200px;
        margin: 0 auto;
        padding: 1.1rem 1.5rem 1.2rem;
        text-align: center;
      }

      h1 {
        font-family: "Playfair Display", serif;
        font-size: clamp(2.1rem, 4vw, 3.4rem);
        margin: 0;
        letter-spacing: 0.02em;
      }

      .subtitle {
        margin-top: 0.4rem;
        font-size: 0.8rem;
        letter-spacing: 0.22em;
        text-transform: uppercase;
        color: var(--text-muted);
      }

      nav {
        margin-top: 1rem;
        display: flex;
        justify-content: center;
        gap: 0.6rem;
        flex-wrap: nowrap;
      }

      nav a {
        padding: 0.45rem 1rem;
        border-radius: 999px;
        border: 1px solid var(--border-soft);
        color: var(--text-main);
        text-decoration: none;
        font-size: 0.88rem;
        background: rgba(255, 255, 255, 0.03);
        white-space: nowrap;
        transition: all 0.25s ease;
      }

      nav a:hover {
        background: var(--accent-soft);
        border-color: var(--accent);
      }

      main {
        max-width: 820px;
        margin: 0 auto;
        padding: 3.2rem 1.6rem 5.5rem;
      }

      h2,
      h3 {
        font-family: "Playfair Display", serif;
        margin-top: 3rem;
        margin-bottom: 1.2rem;
        letter-spacing: 0.02em;
      }

      h2 {
        font-size: 2rem;
      }

      h3 {
        font-size: 1.45rem;
      }

      p {
        margin: 0 0 1.6rem;
      }

      footer {
        border-top: 1px solid var(--border-soft);
        text-align: center;
        padding: 2.5rem 1rem;
        font-size: 0.85rem;
        color: var(--text-muted);
      }

      /* ===== AJUSTES MOBILE ===== */
      @media (max-width: 768px) {
        .header-inner {
          padding: 0.8rem 1rem 0.9rem;
        }

        h1 {
          font-size: 1.7rem;
        }

        .subtitle {
          font-size: 0.7rem;
          letter-spacing: 0.16em;
        }

        nav {
          flex-wrap: wrap;          /*  CLAVE */
          justify-content: center;
        }

        main {
          padding: 2.6rem 1.2rem 4.5rem;
        }
      }
    </style>
