---
const {
  title = "Víctor Cazorla Fernández",
  description = "Dirección IT · Gestión Ambiental · Ética profesional"
} = Astro.props;

const currentPath = Astro.url.pathname;
---

<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <title>{title}</title>

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600&family=Playfair+Display:wght@500;600;700&display=swap"
      rel="stylesheet"
    />

    <style>
      :root {
        --bg-main: #070b14;
        --bg-header: rgba(7, 11, 20, 0.88);
        --text-main: #e6e9ef;
        --text-muted: #b6bcc8;
        --accent: #8fb3ff;
        --accent-soft: rgba(143, 179, 255, 0.15);
        --border-soft: rgba(255, 255, 255, 0.08);
        --accent-gold: #d4af37;
      }

      * {
        box-sizing: border-box;
      }

      body {
        margin: 0;
        font-family: "Inter", system-ui, sans-serif;
        background: radial-gradient(
            1200px 600px at 50% -200px,
            #121a2f 0%,
            transparent 70%
          ),
          var(--bg-main);
        color: var(--text-main);
        line-height: 1.75;
      }

      /* ===== HEADER ===== */
      header {
        position: sticky;
        top: 0;
        z-index: 100;
        background: linear-gradient(
          to bottom,
          rgba(18, 26, 47, 0.92),
          rgba(7, 11, 20, 0.88)
        );
        backdrop-filter: blur(12px);
        border-bottom: 1px solid rgba(212, 175, 55, 0.25);
      }

      .header-inner {
        max-width: 1200px;
        margin: 0 auto;
        padding: 1.1rem 1.5rem 1.2rem;
        text-align: center;
      }

      header h1 {
        font-family: "Playfair Display", serif;
        font-size: clamp(2.1rem, 4vw, 3.4rem);
        margin: 0;
        letter-spacing: 0.02em;
      }

      .subtitle {
        margin-top: 0.4rem;
        font-size: 0.8rem;
        letter-spacing: 0.22em;
        text-transform: uppercase;
        color: var(--text-muted);
      }

      nav {
        margin-top: 1rem;
        display: flex;
        justify-content: center;
        gap: 0.6rem;
        flex-wrap: nowrap;
      }

      nav a {
        padding: 0.45rem 1rem;
        border-radius: 999px;
        border: 1px solid var(--border-soft);
        color: var(--text-main);
        text-decoration: none;
        font-size: 0.88rem;
        background: rgba(255, 255, 255, 0.03);
        white-space: nowrap;
        transition: all 0.25s ease;
      }

      nav a.active {
        border-color: var(--accent-gold);
        background: linear-gradient(
          145deg,
          rgba(212, 175, 55, 0.18),
          rgba(212, 175, 55, 0.05)
        );
        box-shadow:
          0 4px 18px rgba(212, 175, 55, 0.25),
          inset 0 0 0 1px rgba(212, 175, 55, 0.35);
      }

      /* ===== MAIN ===== */
      main {
        max-width: 820px;
        margin: 0 auto;
        padding: 3.2rem 1.6rem 5.5rem;
      }

      h2 {
        font-family: "Playfair Display", serif;
        font-size: 2rem;
        margin-top: 3rem;
        margin-bottom: 1.2rem;
      }

      p {
        margin: 0 0 1.6rem;
      }

      .editorial-text p {
        margin-bottom: 2.2rem;
      }

      footer {
        border-top: 1px solid var(--border-soft);
        text-align: center;
        padding: 2.5rem 1rem;
        font-size: 0.85rem;
        color: var(--text-muted);
      }

      /* ===== MOBILE BASE ===== */
      @media (max-width: 768px) {
        .header-inner {
          padding: 0.5rem 0.8rem 0.6rem;
        }

        header h1 {
          font-size: 1.45rem;
        }

        .subtitle {
          font-size: 0.65rem;
          letter-spacing: 0.14em;
          margin-top: 0.2rem;
        }

        nav {
          margin-top: 0.6rem;
          justify-content: center;
          flex-wrap: wrap;
          row-gap: 0.4rem;
        }

        nav a {
          font-size: 0.72rem;
          padding: 0.28rem 0.65rem;
        }

        main {
          padding: 1.8rem 1.2rem 4rem;
        }

        h2 {
          font-size: 1.45rem;
          line-height: 1.35;
        }
      }

      /* ===== MOBILE PAGE H1 — REDUCCIÓN REAL ===== */
      @media (max-width: 768px) {
        main h1 {
          font-family: "Playfair Display", serif;
          font-size: 1.45rem;
          line-height: 1.22;
          margin-top: 1.6rem;
          margin-bottom: 0.9rem;
          letter-spacing: 0.01em;
        }
      }
    </style>
  </head>

  <body>
    <header>
      <div class="header-inner">
        <h1>Víctor Cazorla Fernández</h1>
        <div class="subtitle">
          Dirección IT · Gestión Ambiental · Ética profesional
        </div>
        <nav>
          <a href="/" class={currentPath === "/" ? "active" : ""}>Inicio</a>
          <a href="/it" class={currentPath.startsWith("/it") ? "active" : ""}>
            Dirección y Gobernanza de IT
          </a>
          <a
            href="/cienciasambientales"
            class={currentPath.startsWith("/cienciasambientales") ? "active" : ""}
          >
            Gestión Ambiental
          </a>
          <a
            href="/deontologia"
            class={currentPath.startsWith("/deontologia") ? "active" : ""}
          >
            Deontología
          </a>
          <a
            href="/formacion"
            class={currentPath.startsWith("/formacion") ? "active" : ""}
          >
            Formación
          </a>
        </nav>
      </div>
    </header>

    <main>
      <slot />
    </main>

    <footer>
      © 2026 · Víctor Cazorla Fernández
    </footer>
  </body>
</html>